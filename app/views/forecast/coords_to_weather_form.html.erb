<div class="container-fluid">
  <h1>Coords &rarr; Weather Lookup</h1>

  <form action="/coords_to_weather">
    <div class="input-group" style="width: 20%">
      <span class="input-group-addon" id="basic-addon3">Latitude</span>
      <input type="text" class="form-control" name="user_latitude" id="the_latitude" aria-describedby="basic-addon3">
    </div>

    <div class="input-group" style="width: 20%">
      <span class="input-group-addon" id="basic-addon3">Longitude</span>
      <input type="text" class="form-control" name="user_longitude" id="the_longitude" aria-describedby="basic-addon3">
    </div>

    <br>

    <button class="btn btn-primary btn-block" type="submit" style="width: 15%">Lookup Weather</button>
  </form>
</div>
